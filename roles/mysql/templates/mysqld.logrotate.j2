{{ data_dir }}/general.log
{{ data_dir }}/error.log
{{ data_dir }}/slow.log
{
    create 0640 mysql mysql
    daily
    rotate 10
    missingok
    notifempty
    compress
    delaycompress
    dateext
    sharedscripts
    postrotate
    if test -x {{ install_dir }}/bin/mysqladmin && /usr/bin/mysqladmin ping &>/dev/null
    then
        {{ install_dir }}/bin/mysqladmin flush-logs
    fi
    endscript
}